@page
@model ClientePWA.Pages.Teachers.MessageDetailsTeacherModel
@{
}
<html>
<head>
    <title>Detalles del mensaje</title>
    <link href="~/Styles/styleMessageDetailsTeacher.css" rel="stylesheet" type="text/css" />
    <link href="~/manifest.json" rel="manifest" />
    <meta name"viewport" content="width=device-width, initial-scale=1.0" />
</head>
<body>
    <header>
        <h1>Detalles del mensaje</h1>
    </header>
    <main>
        <center>
            <div class="divFlex">
                <label>Asunto:</label>
                <p class="pAffair">
                </p>
            </div>
            <br />
            <div class="divFlexMessage">
                <label>Mensaje:</label>
                <p class="MessageP">
                </p>
            </div>
            <br />
            <div class="divDate">
                <label class="dateLabel"></label>
            </div>
            <br />
            <a data-cancelteacher="cancelTeacher" class="aBack">Volver &#8617;</a>
        </center>
    </main>
    <footer></footer>
    <script type="text/javascript">
        if (navigator.serviceWorker) {
            //Registranos al service worker
            navigator.serviceWorker.register("/ServiceWorkerJS.js");
            //Aqui recibo los mensajes de actualizacion de datos.
        }
    </script>
    <script src="~/Scripts/MessageDetailsTeacherJS.js" type="text/javascript"></script>
    <script src="~/Scripts/ClickAndSubmitJS.js" type="text/javascript"></script>
</body>
</html>
