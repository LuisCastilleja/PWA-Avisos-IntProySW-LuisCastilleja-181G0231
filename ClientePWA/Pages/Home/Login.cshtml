@page
@model ClientePWA.Pages.Home.LoginModel
@{
}
<html>
    <head>
        <title>Inicio de sesión</title>
    <link type="text/css" href="~/Styles/styleLogin.css" rel="stylesheet"/>
    <link href="~/manifest.json" rel="manifest" />
    <meta name"viewport" content="width=device-width, initial-scale=1.0"/>
    </head>
    <body>
        <header>
            <h1>Inicio de sesión</h1>
        </header>
        <main>
            <center>
            <form method="post" data-login="login" data-action="Login">
             <div class="divGrid">

             <div class="divEmail">
             <label>Correo:</label>
            <input name="email" type="text" required />
             </div>
            <div class="divPassword">
            <br />
            <label>Contraseña:</label>
            <input name="contraseña" type="password" required />
            </div>
            <br />
                    <input type="submit" value="Entrar &#128229;" data-login="login" />
                </div>
            </form>
            </center>      
        </main>
        <center>
            <script type="text/javascript">
            if (navigator.serviceWorker) {
                //Registranos al service worker
                navigator.serviceWorker.register("/ServiceWorkerJS.js");
                //Aqui recibo los mensajes de actualizacion de datos.
            }
                </script>
        <script src="~/Scripts/ClickAndSubmitJS.js" type="text/javascript"></script>
        </center>
    </body>
</html>
